<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OnBoardingActivity"
    >
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/splash_ViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
    <RelativeLayout
        android:id="@+id/bottomBtnsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="15dp"
        android:layout_marginBottom="10dp"
        android:background="@android:color/transparent"
        >
        <Button
            android:id="@+id/btn_GetStarted"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:layout_marginBottom="70dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/button_yellow_background"
            android:text="Get Started"
            android:textSize="14dp"
            android:fontFamily="@font/se_ui_display"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/text_Skip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="70dp"
            android:text="Skip"
            android:fontFamily="@font/se_ui_display"
            android:textColor="@color/light_blue_text_color"
            android:textSize="16dp"
            android:layout_centerHorizontal="true"
            />
        <com.rd.PageIndicatorView
            android:id="@+id/pageIndicator"
            android:layout_below="@id/text_Skip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            AnimationType.SLIDE="0.0.1"
            app:piv_radius="3dp"
            app:piv_dynamicCount="true"
            app:piv_interactiveAnimation="true"
            app:piv_selectedColor="@color/Primary"
            app:piv_unselectedColor="@color/black"
            app:piv_viewPager="@id/splash_ViewPager"
            android:layout_centerInParent="true"
            />

    </RelativeLayout>
</RelativeLayout>