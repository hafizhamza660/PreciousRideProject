<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PhoneVerification">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/container_1">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:navigationIcon="@drawable/back_icon"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/container_1"
        android:id="@+id/container_2"
        android:layout_marginTop="80dp"
        android:padding="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phone Verification"
            android:textSize="40dp"
            android:textColor="@color/Secondary"
            android:fontFamily="@font/se_ui_display"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter your OTP code here"
            android:textSize="20dp"
            android:textColor="@color/Secondary"
            android:fontFamily="@font/se_ui_display"
            />

    </LinearLayout>

    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/container_3"
        android:layout_below="@id/container_2"
        android:weightSum="4"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/opt_edt"
            >
        <EditText
            android:id="@+id/opt_edt_1"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:textColor="@color/Secondary"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="30sp"
            android:background="@drawable/opt_edt"/>
        </LinearLayout>

        <LinearLayout
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/opt_edt"
            >
            <EditText
                android:id="@+id/opt_edt_2"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="60dp"

                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:textSize="30sp"
                android:background="@drawable/opt_edt"/>
        </LinearLayout>

        <LinearLayout
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/opt_edt"
            >
            <EditText
                android:id="@+id/opt_edt_3"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="60dp"

                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:textSize="30sp"
                android:background="@drawable/opt_edt"/>
        </LinearLayout>

        <LinearLayout

            android:layout_margin="10dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/opt_edt"
            >
            <EditText

                android:id="@+id/opt_edt_4"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="60dp"

                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:textSize="30sp"
                android:background="@drawable/opt_edt"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/container_4"
        android:layout_below="@id/container_3"
        android:orientation="vertical"
        android:padding="10dp"
        >
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_yellow_background"
            android:text="Verify"
            android:textSize="20dp"
            android:fontFamily="@font/se_ui_display"
            android:textAllCaps="false"
            android:textColor="@color/white"/>
    </LinearLayout>


</RelativeLayout>