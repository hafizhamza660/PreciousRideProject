<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddVehicleManagement">

    <RelativeLayout
        android:background="@color/white"
        android:id="@+id/container_1"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="wrap_content">

        <ImageView
            android:onClick="back_button"
            android:id="@+id/back_button"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/back_icon"
            />

        <TextView
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Vehicle Management"
            android:textSize="15dp"
            android:textStyle="bold"
            android:fontFamily="@font/se_ui_display"
            android:textColor="@color/Secondary"
            />



    </RelativeLayout>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@id/container_1"
    android:id="@+id/container_2">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VEHICLE BRAND"
                />
            <EditText
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edt_text_white"
                android:textColor="@color/Secondary"
                android:hint="Toyota"
                android:textSize="15dp"
                android:padding="15dp"
                android:drawableEnd="@drawable/indicator"
                android:drawableRight="@drawable/indicator" />
        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MODEL"
                />
            <EditText
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edt_text_white"
                android:textColor="@color/Secondary"
                android:hint="Camry"
                android:textSize="15dp"
                android:padding="15dp"
                android:drawableEnd="@drawable/indicator"
                android:drawableRight="@drawable/indicator" />
        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="YEAR"
                />
            <EditText
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edt_text_white"
                android:textColor="@color/Secondary"
                android:hint="2018"
                android:textSize="15dp"
                android:padding="15dp"
                android:drawableEnd="@drawable/indicator"
                android:drawableRight="@drawable/indicator" />
        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LICENSE PLATE"
                />
            <EditText
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edt_text_white"
                android:textColor="@color/Secondary"
                android:hint="43A 364.82"
                android:textSize="15dp"
                android:padding="15dp"
                android:drawableEnd="@drawable/indicator"
                android:drawableRight="@drawable/indicator" />
        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="COLOR"
                />
            <EditText
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edt_text_white"
                android:textColor="@color/Secondary"
                android:hint="Black"
                android:textSize="15dp"
                android:padding="15dp"
                android:drawableEnd="@drawable/indicator"
                android:drawableRight="@drawable/indicator" />
        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BOOKING TYPE"
                />
            <EditText
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edt_text_white"
                android:textColor="@color/Secondary"
                android:hint="Taxi 7 Seat"
                android:textSize="15dp"
                android:padding="15dp"
                android:drawableEnd="@drawable/indicator"
                android:drawableRight="@drawable/indicator" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>

    <RelativeLayout
        android:onClick="completeaddvehicle"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="30dp"
        android:background="@color/Primary"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="COMPLETE"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/Secondary"
            android:fontFamily="@font/se_ui_display"/>

    </RelativeLayout>



</RelativeLayout>