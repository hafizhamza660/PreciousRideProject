<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/artwork"
        app:layout_constraintBottom_toTopOf="@+id/view_guideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/back_button"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:onClick="back_button"
        android:src="@drawable/back_icon"
        app:layout_constraintBottom_toBottomOf="@id/back_button_guideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.03"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/white" />

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/back_button_guideline"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.08"/>

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/view_guideline"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.30"/>

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/card_start_guideline"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.20"/>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@color/white"
        android:elevation="4dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintTop_toTopOf="@id/card_start_guideline"
        app:layout_constraintBottom_toTopOf="@+id/card_end_guideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:padding="20dp">

                <TextView
                    android:id="@+id/login_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/se_ui_display"
                    android:textColor="@color/Secondary"
                    android:textSize="30dp" />



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:weightSum="3"

                android:orientation="vertical"
                android:padding="10dp">

               <EditText
                   android:id="@+id/email"
                   android:padding="16sp"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:hint="Email"
                   android:inputType="textEmailAddress"
                   android:background="@drawable/background_edit_text"
                   />

                <EditText
                    android:id="@+id/password"
                   android:layout_marginTop="8dp"
                    android:padding="16sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:background="@drawable/background_edit_text"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:orientation="vertical"
                android:padding="10dp">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_background"
                    android:onClick="sign_in"
                    android:text="Next"
                    android:textColor="@color/white" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/card_end_guideline"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.60"/>




    <TextView
        android:onClick="forget_password"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Forget password"
        android:textColor="@color/Secondary"
        android:textSize="16sp"
        android:fontFamily="@font/se_ui_display"
        app:layout_constraintTop_toTopOf="@id/signup_text_start_guideline"
        app:layout_constraintBottom_toBottomOf="@id/signup_text_end_guideline"
        app:layout_constraintRight_toRightOf="@id/signup_text_right_guideline"
        app:layout_constraintLeft_toLeftOf="@id/signup_text_left_guideline"
        />


    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/signup_text_start_guideline"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.90"/>

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/signup_text_end_guideline"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.95"/>

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/signup_text_left_guideline"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.10"/>

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/signup_text_right_guideline"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.90"/>


<!--    <LinearLayout-->
<!--        android:layout_width=""-->
<!--        android:layout_height=""-->



</androidx.constraintlayout.widget.ConstraintLayout>