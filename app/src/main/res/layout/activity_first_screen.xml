<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".FirstScreen">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1st Screen"
        android:onClick="sreen_1st"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2nd Screen"
        android:onClick="sreen_2nd"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="3rd Screen"
        android:onClick="sreen_3rd"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="4th Screen"
        android:onClick="sreen_4th"
        />


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Notification"
        android:onClick="sreen_5th"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Recipt"
        android:onClick="sreen_6th"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Invite"
        android:onClick="sreen_7th"
        />

</LinearLayout>