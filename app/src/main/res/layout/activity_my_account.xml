<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".MyAccount">

    <androidx.cardview.widget.CardView
        android:id="@+id/maincontiner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="4dp"
        >
        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            >

            <RelativeLayout
                android:id="@+id/container_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

           <ImageView
               android:id="@+id/back_button"
               android:layout_width="38dp"
               android:layout_height="38dp"
               android:src="@drawable/back_icon"
               />

               <Button
                   android:onClick="edit_profile"
                   android:textSize="15dp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Edit"
                   android:background="@android:color/transparent"
                   android:textColor="@color/orange"
                   android:layout_alignParentEnd="true"
                   android:layout_alignParentRight="true" />


            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@id/container_2"
                android:layout_below="@id/container_1"
                android:padding="20dp"
                >

                <androidx.cardview.widget.CardView
                    android:id="@+id/image"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    app:cardCornerRadius="40dp"
                    android:layout_centerHorizontal="true"
                    app:cardElevation="2dp">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/dp"/>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/name"
                    android:layout_below="@id/image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Martha Banks"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="8dp"
                    android:textSize="20dp"
                    android:fontFamily="@font/se_ui_display"
                    android:textStyle="bold"
                    android:textColor="@color/Secondary"/>

                <TextView
                    android:id="@+id/member_info"
                    android:layout_below="@id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gold Member"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="4dp"
                    android:textSize="15dp"
                    android:fontFamily="@font/se_ui_display"
                    android:textStyle="bold"
                    android:textColor="@color/light_blue_text_color"/>

            </RelativeLayout>





        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/information_txt"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:layout_below="@id/maincontiner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="INFORMATIONS"
        android:fontFamily="@font/se_ui_display"
        android:textSize="20dp"
        />


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/information_txt"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Username"
                    android:fontFamily="@font/se_ui_display"
                    android:textSize="20dp"
                    android:textColor="@color/Secondary"
                    />

                <TextView
                   android:layout_weight="1"
                    android:gravity="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Martha Banks"
                android:fontFamily="@font/se_ui_display"
                android:textSize="20dp"
                android:textColor="@color/light_blue_text_color"
                />
                <ImageView
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/indicator"
                     />

            </LinearLayout>

            <View
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/light_blue_text_color"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phone number"
                    android:fontFamily="@font/se_ui_display"
                    android:textSize="20dp"
                    android:textColor="@color/Secondary"
                    />

                <TextView
                    android:layout_weight="1"
                    android:gravity="end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="584-490-9153"
                    android:fontFamily="@font/se_ui_display"
                    android:textSize="20dp"
                    android:textColor="@color/light_blue_text_color"
                    />
                <ImageView
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/indicator"
                    />

            </LinearLayout>

            <View
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/light_blue_text_color"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:fontFamily="@font/se_ui_display"
                    android:textSize="20dp"
                    android:textColor="@color/Secondary"
                    />

                <TextView
                    android:layout_weight="1"
                    android:gravity="end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="freeslab88@gmail.com"
                    android:fontFamily="@font/se_ui_display"
                    android:textSize="20dp"
                    android:textColor="@color/light_blue_text_color"
                    />
                <ImageView
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/indicator"
                    />

            </LinearLayout>

            <View
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/light_blue_text_color"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gender"
                    android:fontFamily="@font/se_ui_display"
                    android:textSize="20dp"
                    android:textColor="@color/Secondary"
                    />

                <TextView
                    android:layout_weight="1"
                    android:gravity="end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Female"
                    android:fontFamily="@font/se_ui_display"
                    android:textSize="20dp"
                    android:textColor="@color/light_blue_text_color"
                    />
                <ImageView
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/indicator"
                    />

            </LinearLayout>

            <View
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/light_blue_text_color"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Birthday"
                    android:fontFamily="@font/se_ui_display"
                    android:textSize="20dp"
                    android:textColor="@color/Secondary"
                    />

                <TextView
                    android:layout_weight="1"
                    android:gravity="end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="April 16, 1988"
                    android:fontFamily="@font/se_ui_display"
                    android:textSize="20dp"
                    android:textColor="@color/light_blue_text_color"
                    />
                <ImageView
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/indicator"
                    />

            </LinearLayout>




        </LinearLayout>
    </androidx.cardview.widget.CardView>


</RelativeLayout>