<?xml version="1.0" encoding="utf-8"?>
    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_marginBottom="16dp"
        android:id="@+id/card_offer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="4dp"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/req_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Type"
                android:gravity="center"
                android:textSize="16sp"
                android:fontFamily="@font/se_ui_display"
                android:textColor="@color/Secondary"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:background="@color/background"
                >

                <androidx.cardview.widget.CardView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="4dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/dp"/>
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Steve Bowen"
                        android:textSize="15dp"
                        android:fontFamily="@font/se_ui_display"
                        android:textColor="@color/Secondary"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardBackgroundColor="@color/Primary"
                            app:cardCornerRadius="50dp">
                            <TextView
                                android:layout_marginLeft="8dp"
                                android:layout_marginRight="8dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ApplePay"
                                android:textSize="10dp"
                                android:textColor="@color/Secondary"
                                android:fontFamily="@font/se_ui_display"/>

                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_height="wrap_content"
                            app:cardBackgroundColor="@color/Primary"
                            app:cardCornerRadius="50dp">
                            <TextView
                                android:layout_marginLeft="8dp"
                                android:layout_marginRight="8dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Discount"
                                android:textSize="10dp"
                                android:textColor="@color/Secondary"
                                android:fontFamily="@font/se_ui_display"/>

                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <LinearLayout
                        android:gravity="end"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:visibility="gone"
                            android:id="@+id/nego_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$25.00"
                            android:textColor="@color/Secondary"
                            android:fontFamily="@font/se_ui_display"
                            android:textSize="15dp"
                            android:layout_marginRight="10dp"
                            />
                        <TextView
                            android:id="@+id/price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$25.00"
                            android:textColor="@color/Secondary"
                            android:fontFamily="@font/se_ui_display"
                            android:textSize="15dp"
                            />
                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2.2 km"
                        android:textSize="10dp"
                        android:textColor="@color/light_blue_text_color"/>
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/se_ui_display"
                    android:textSize="10dp"
                    android:text="PICK UP"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/pickup_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="7958 Swift Village"
                    android:textColor="@color/Secondary"
                    android:textSize="15dp"
                    android:layout_marginLeft="3dp"/>
            </LinearLayout>

            <View
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/line_color"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/se_ui_display"
                    android:textSize="10dp"
                    android:text="DROP OFF"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/dropoff_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="105 William St, Chicago, US"
                    android:textColor="@color/Secondary"
                    android:textSize="15dp"
                    android:layout_marginLeft="3dp"/>
            </LinearLayout>



            <LinearLayout
                android:visibility="gone"
                android:id="@+id/nego_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:weightSum="2"
                android:orientation="vertical">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/line_color"/>

                <Button
                    android:layout_marginTop="10dp"
                    android:id="@+id/negotiate_btn"
                    android:background="@drawable/button_yellow_background"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Negotiate"
                    android:textColor="@color/Secondary"
                    android:textSize="15dp"
                    android:layout_marginLeft="3dp"/>



                <Button
                    android:id="@+id/accept_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/button_yellow_background"
                    android:text="Accept"
                    />
            </LinearLayout>



            <LinearLayout
                android:visibility="gone"
                android:id="@+id/nego_enter_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:weightSum="2"
                android:orientation="vertical">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/line_color"/>
                <EditText
                    android:layout_marginTop="10dp"
                    android:id="@+id/negotiate_edt"
                    android:background="@drawable/background_edit_text"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Price"
                    android:textColor="@color/Secondary"
                    android:padding="16dp"
                    android:textSize="16sp"
                    android:layout_marginLeft="3dp"/>
                <Button
                    android:layout_marginTop="10dp"
                    android:id="@+id/enter_btn"
                    android:background="@drawable/button_yellow_background"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Send"
                    android:textColor="@color/Secondary"
                    android:textSize="15dp"
                    android:layout_marginLeft="3dp"/>




            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/cancel_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:weightSum="2"
                android:orientation="vertical">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/line_color"/>

                <Button
                    android:layout_marginTop="10dp"
                    android:id="@+id/cancel_btn"
                    android:background="@drawable/button_yellow_background"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cancel"
                    android:textColor="@color/Secondary"
                    android:textSize="15dp"
                    android:layout_marginLeft="3dp"/>




            </LinearLayout>


        </LinearLayout>





    </androidx.cardview.widget.CardView>
